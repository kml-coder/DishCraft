<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.OrderPizzaController">
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Order Pizza" />

    <HBox alignment="CENTER" spacing="20">
        <!-- Left side with pizza selection options -->
        <VBox spacing="10">
            <Label text="Choose Style" />
            <ComboBox fx:id="styleComboBox" onAction="#handleStyleSelection" />

            <Label fx:id="chooseTypeLabel" text="Choose Type" visible="false" />
            <ComboBox fx:id="typeComboBox" onAction="#handleTypeSelection" visible="false" />

            <Label fx:id="chooseSizeLabel" text="Choose Size" visible="false" />
            <ComboBox fx:id="sizeComboBox" onAction="#handleSizeSelection" visible="false" />

            <Label text="Choose Toppings" />
            <ListView fx:id="toppingsListView" prefHeight="300" visible="false" />

            <Label text="Selected Toppings" />
            <ListView fx:id="selectedToppingsListView" prefHeight="100" visible="false" />

            <HBox spacing="10">
                <Button onAction="#handleAddTopping" text="Add Topping" />
                <Button onAction="#handleRemoveTopping" text="Remove Topping" />
                <Button onAction="#handleAddPizza" text="Add Pizza to Order" />
            </HBox>
        </VBox>

        <!-- Center section for displaying the pizza image -->
        <VBox alignment="CENTER" spacing="10">
            <Label text="Pizza Preview" />
            <ImageView fx:id="pizzaImageView" fitHeight="150" fitWidth="150" />
            <Label text="Crust" />
            <Label fx:id="crustLabel" text=" " />

        </VBox>

        <!-- Right side for added pizzas and actions -->
        <VBox alignment="CENTER" spacing="10">
            <Label text="Cart" />
            <ListView fx:id="addedPizzasListView" />

            <Button onAction="#handleRemoveSelectedPizza" text="Remove Selected Pizza" />
            <Button onAction="#handleFinalizeOrder" text="Finalize Order" />
            <HBox alignment="CENTER" spacing="20">
                <Label text="Total: " />
                <Label fx:id="TotalLabel" text="0.00" />
            </HBox>
        </VBox>
    </HBox>

    <!-- Bottom section for order summary and output -->
    <HBox alignment="BOTTOM_LEFT" spacing="10">
        <Label text="Subtotal: " />
        <Label fx:id="subtotalLabel" text="0.00" />
    </HBox>

    <TextArea fx:id="outputArea" prefHeight="100" prefWidth="600" />
   <padding>
      <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
   </padding>
</VBox>
