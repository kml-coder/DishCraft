<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ViewOrdersController">
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="View Orders">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin></Label>
    <TableView fx:id="ordersTableView">
        <columns>
            <TableColumn fx:id="orderNumberColumn" prefWidth="100.0" text="Order Number" />
            <TableColumn fx:id="orderTotalColumn" prefWidth="100.0" text="Total price" />
            <TableColumn fx:id="listofPizzasColumn" prefWidth="400.0" text="List of Pizzas" />
        </columns>
    </TableView>
   <HBox alignment="CENTER" prefHeight="50" prefWidth="200.0" spacing="10.0">
      <children>
          <Button onAction="#handleCancelOrder" text="Cancel Selected Order" />
          <Button onAction="#handleExportOrders" text="Export Orders" />
      </children>
   </HBox>
    <TextArea fx:id="outputArea" />
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</VBox>
